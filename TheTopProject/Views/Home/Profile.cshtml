<section id="portfolio" class="portfolio" style="margin-top: 5%; margin-left: 10%; margin-right: 10%">
    <div class="container">

        <div class="section-title aos-init aos-animate" data-aos="zoom-out">
            <h2>ADVERTISEMENT</h2>


            <hr />

        </div>
        @model List<Design>




        <div class="row portfolio-container aos-init aos-animate" data-aos="fade-up" style="position: relative; height: 1507.85px;">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app" style="position: absolute; left: 0px; top: 0px;">
                    <div class="portfolio-img"><img src="@Url.Content("~/assets/img/Design/" + item.Image)" class="img-fluid" alt=""></div>
                    <div class="portfolio-info">
                        <h4>Size: @item.Width x @item.Height</h4>
                        <p>Cost: @item.Cost $ </p>
                        <h6 style="color:white">Date: @item.AddDate</h6>

                        <a href="" class="preview-link" title="Buy"><i class="bx bx-shopping-bag"></i></a>
                    </div>
                </div>

            }

        </div>

    </div>
</section>




