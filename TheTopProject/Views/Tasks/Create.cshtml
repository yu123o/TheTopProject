@model TheTopProject.Models.Tasks

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="margin:5% 20% 0% 40% ">
    <h1>Create</h1>

    <h4>Tasks</h4>
    <hr />
    <div class="row">
        <div class="col-md-6" style="margin-left:4%">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaskContent" class="control-label"></label>
                    <input asp-for="TaskContent" class="form-control" />
                    <span asp-validation-for="TaskContent" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FinishTime" class="control-label"></label>
                    <input asp-for="FinishTime" class="form-control" />
                    <span asp-validation-for="FinishTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

 
</div>
