<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Top</title>
    <link href="~/assets/img/xx.png" rel="icon">
    <link href="~/assets/img/xx.png" rel="des">
    <link type="text/css" href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/images/icons/css/font-awesome.css" rel="stylesheet">
   
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" href="/Home/Index">The Top </a>
                <div class="nav-collapse collapse navbar-inverse-collapse">

                    <ul class="nav pull-right">
                      
                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @TempData["Aname"]
                                @TempData["EAname"]
                                @TempData["AEname"]

                            </a>
                            
                        </li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar --> <main>
    <br /><br /><br />
        <div class="span3">
            <div class="sidebar">
                <br /><br /><br /> <br /><br /><br /> <br />
                                                      <ul class="widget widget-menu unstyled">
                                                          <li class="active">
                                                              <a href="/Admin/Index">
                                                                  <i class="menu-icon icon-dashboard"></i>Dashboard
                                                              </a>
                                                          </li>
                                                          @if (TempData["Aname"] != null)
                                                          {
                                                              <li>
                                                                  <a asp-action="Unapproved" asp-controller="Admin"><i class="menu-icon icon-bullhorn"></i>Unapproved Feedback </a>
                                                              </li>
                                                              <li>
                                                                  <a asp-action="Create" asp-controller="Employees">
                                                                      <i class=" menu-icon icon-inbox"></i>Add New Employee
                                                                  </a>
                                                              </li>
                                                              <li>
                                                                  <a asp-action="Create" asp-controller="Tasks">
                                                                      <i class="menu-icon icon-tasks"></i>Add Tasks<b class="label orange pull-right">

                                                                      </b>
                                                                  </a>
                                                              </li>
                                                              <li>
                                                                  <a asp-action="Create" asp-controller="Coupons">
                                                                      <i class="menu-icon icon-tasks"></i>Add Coupons<b class="label orange pull-right">

                                                                      </b>
                                                                  </a>
                                                              </li>
                                                          }
                                                          else if (TempData["EAname"] != null || TempData["AEname"] != null)
                                                          {
                                                          <li>
                                                              <a asp-action="Index" asp-controller="Tasks" asp-route-id="@TempData["EId"]">
                                                                  <i class="menu-icon icon-tasks"></i>Tasks<b class="label orange pull-right">

                                                                  </b>
                                                              </a>
                                                          </li>
                                                          }
                                                      </ul>
                <!--/.widget-nav-->
                <!--/.widget-nav-->
                <ul class="widget widget-menu unstyled">

                    <li><a asp-action="LogOut" asp-controller="Admin"><i class="menu-icon icon-signout"></i>Logout </a></li>
                </ul>
            </div>
            <!--/.sidebar-->
        </div>

        @RenderBody()
    </main>

    <!--/.wrapper-->

    <script src="~/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/scripts/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/scripts/common.js" type="text/javascript"></script>

</body>
</html>